            android:textSize="@dimen/forecast"
            android:layout_column="0"
            android:layout_row="0"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_column="0"
            android:layout_row="1"
            android:background="@drawable/solid_divide_line"
            />
        <GridView
            android:id="@+id/horizon_scroll"
            android:layout_column="0"
            android:layout_row="2"
            >
            <!--<com.giant.jamie.weather.HourlyForecast-->
                <!--android:id="@+id/hourly_forecast"-->
