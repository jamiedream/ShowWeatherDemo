                />
            <TextView
                android:id="@+id/lt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_value"
                android:textSize="@dimen/lt_forecast"
                android:textColor="@color/lt"
                android:textAlignment="viewEnd"
                android:layout_weight="1"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_column="0"
            android:layout_row="7"
            android:background="@drawable/dotted_divide_line"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/third_day"
            android:layout_column="0"
            android:layout_row="8"
            >
            <TextView
                android:id="@+id/day3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_value"
                android:textSize="@dimen/day_forecast"
                android:layout_weight="2"
                />
            <ImageView
                android:id="@+id/weather_image3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                android:textAlignment="viewEnd"
                android:layout_weight="5"
                />
            <TextView
                android:id="@+id/ht3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_value"
                android:textSize="@dimen/ht_forecast"
                android:textAlignment="viewEnd"
                android:layout_weight="2"
                />
            <TextView
                android:id="@+id/lt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_value"
                android:textSize="@dimen/lt_forecast"
                android:textColor="@color/lt"
                android:textAlignment="viewEnd"
                android:layout_weight="1"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_column="0"
            android:layout_row="9"
            android:background="@drawable/dotted_divide_line"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/four_day"
            android:layout_column="0"
            android:layout_row="10"
            >
            <TextView
                android:id="@+id/day4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_value"
                android:textSize="@dimen/day_forecast"
