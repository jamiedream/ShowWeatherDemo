                        <!--/>-->
                <!--</GridLayout>-->
            <!--</GridLayout>-->
        </GridView>
        <TextView
            android:layout_width="match_parent"
            android:layout_column="0"
            android:layout_row="3"
            android:background="@drawable/dotted_divide_line"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/first_day"
            android:layout_column="0"
            android:layout_row="4"
            >
            <TextView
                android:id="@+id/day1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_value"
                android:textSize="@dimen/day_forecast"
                android:layout_weight="2"
                />
            <ImageView
                android:id="@+id/weather_image1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                android:textAlignment="viewEnd"
                android:layout_weight="5"
                />
            <TextView
                android:id="@+id/ht1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_value"
                android:textSize="@dimen/ht_forecast"
                android:textAlignment="viewEnd"
                android:layout_weight="2"
                />
            <TextView
                android:id="@+id/lt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_value"
                android:textSize="@dimen/lt_forecast"
                android:textColor="@color/lt"
                android:textAlignment="viewEnd"
                android:layout_weight="1"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_column="0"
            android:layout_row="5"
            android:background="@drawable/dotted_divide_line"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/second_day"
            android:layout_column="0"
            android:layout_row="6"
            >
            <TextView
                android:id="@+id/day2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_value"
                android:textSize="@dimen/day_forecast"
                android:layout_weight="2"
                />
            <ImageView
                android:id="@+id/weather_image2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
