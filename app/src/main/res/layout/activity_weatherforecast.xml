<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_margin"
    >
    <TextView
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="@dimen/location"
        />
    <TextView
        android:id="@+id/local_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/location"
        android:textAlignment="center"
        android:textSize="@dimen/location_time"
        />
    <GridLayout
        android:id="@+id/forecast_weather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/local_time"
        android:columnCount="1"
        android:rowCount="14"
        android:background="@color/tran_b"
        android:padding="@dimen/block_inner_padding"
        >
        <TextView
